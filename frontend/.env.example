# Plinko Emoji - Environment Variables
# Copy this file to .env.local and fill in the values

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================

# Contract address deployed on Sepolia
NEXT_PUBLIC_CONTRACT_ADDRESS=0x5c8f1Bb82aDB0Aa5619Fb0D04ceC917827bC4E0f

# Chain ID (11155111 = Sepolia)
NEXT_PUBLIC_CHAIN_ID=11155111

# ===========================================
# FHEVM CONFIGURATION (Zama)
# ===========================================

# Zama FHEVM Relayer URL
NEXT_PUBLIC_RELAYER_URL=https://relayer.testnet.zama.org

# FHEVM ACL Contract Address
NEXT_PUBLIC_ACL_ADDRESS=0xf0Ffdc93b7E186bC2f8CB3dAA75D86d1930A433D

# FHEVM Coprocessor Address
NEXT_PUBLIC_COPROCESSOR_ADDRESS=0x92C920834Ec8941d2C77D188936E1f7A6f49c127

# FHEVM KMS Verifier Address
NEXT_PUBLIC_KMS_VERIFIER_ADDRESS=0xbE0E383937d564D7FF0BC3b46c51f0bF8d5C311A

# ===========================================
# GAME CONFIGURATION
# ===========================================

# Price per turn in ETH
NEXT_PUBLIC_TURN_PRICE=0.001

# Free turns per daily check-in
NEXT_PUBLIC_DAILY_FREE_TURNS=3

# ===========================================
# OPTIONAL: RPC CONFIGURATION
# ===========================================

# Infura API Key (optional, for fallback RPC)
# NEXT_PUBLIC_INFURA_API_KEY=your_infura_api_key

# Custom RPC URL (optional)
# NEXT_PUBLIC_RPC_URL=https://sepolia.infura.io/v3/your_api_key
